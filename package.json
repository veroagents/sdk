{
  "name": "@veroai/sdk",
  "version": "0.1.2",
  "description": "Official TypeScript/JavaScript SDK for VeroAI - Unified communications API",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "veroai",
    "omni",
    "omnichannel",
    "communications",
    "api",
    "sdk",
    "email",
    "sms",
    "voice",
    "whatsapp",
    "messaging"
  ],
  "author": "VeroAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/veroagents/sdk"
  },
  "homepage": "https://docs.veroai.dev",
  "bugs": {
    "url": "https://github.com/veroagents/sdk/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.0",
    "eslint": "^9.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0",
    "ws": "^8.14.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0",
    "ws": ">=8.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "ws": {
      "optional": true
    }
  }
}
